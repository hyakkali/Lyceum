<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script src="/js/libs/jquery-3.2.1.slim.min.js" charset="utf-8"></script>
    <title></title>
    <style>
      body {padding-top: 80px;}
    </style>
  </head>
  <body>
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">
        <div id="errors">

        </div>
        <h1>Create a New Community</h1>
        <form action="/community-create" method="post" onsubmit="return validateForm()">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" id="name" name="name">
          </div> <!-- end div form-group -->
          <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" id="description" name="description">
          </div> <!-- end div form-group -->
          <div id="url" class="form-group">
            <label id="label-one">Material</label>
            <input type="url" class="form-control" id="material" name="material">
            <button id="button" type="button" onclick="addURL()">Add URL</button>
            <script>
              function addURL() {
                var url = $('#url');
                var button = $('#button');
                var label = $('#label-one');
                label.html('Material #1');
                url.append('<label id="label">Material</label>');
                url.append('<input type="url" class="form-control" id="material" name="material">');
                url.append('<style> #label {padding-top:15px;}');
                var newLabel = $('#label'); //array of id label labels
                var count = newLabel.length+1;
                newLabel.html('Material #'+count);
                $('#button').appendTo(url);
              }
            </script>
          </div> <!-- end div form-group -->
          <script>
            function validateForm() {
              var name = document.getElementById('name');
              var description = document.getElementById('description');
              var div = document.getElementById('errors');
              div.className = '';
              div.innerHTML = '';
              if (name.value.trim()===''||description.value.trim()==='') {
                name.style.borderColor = "#E34234";
                description.style.borderColor = "#E34234";
                div.className += 'alert alert-danger';
                div.innerHTML += 'Name and description are required!';
                return false;
              }
              return true;
            }
          </script>
          <button type="submit" class="btn btn-warning btn-lg">Create Community</button>
        </form>
      </div> <!-- end div col-sm-6 col-sm-offset-3 -->
    </div> <!-- end div container -->
  </body>
</html>
