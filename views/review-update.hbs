<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    {{> header}}
  </head>
  <body>

    {{> navbar}}

    <div class="wrapper960 center body">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>Update {{review.message}}</h1>
        <br>
        <form action="/review-update/{{review._id}}" method="post">
          <div class="form-group">
            <label>Message</label>
            <input type="text" class="form-control" placeholder="Leave blank to keep original message" id="message" name="message">
          </div> <!-- end div form-group -->
          <br>
          <div class="radio-buttons">
            <input type="radio" name="rating" class="radio" id="like" value="like" checked> Like <br>
            <input type="radio" name="rating" class="radio" id="dislike" value="dislike"> Dislike <br>
          </div>
          <br>
          <button type="submit" class="btn green">Update Review</button>
        </form>
      </div> <!-- end div col-sm-6 col-sm-offset-3 -->
    </div> <!-- end div container -->

    {{> footer}}

  </body>
</html>
