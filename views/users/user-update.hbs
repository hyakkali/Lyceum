<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    {{> header}}
  </head>
  <body>

    {{> navbar}}

    <div class="wrapper960 center body">
      <div class="col-12">
        <h2 class="text-center">Update Your Profile</h2> <br> <br>
        <form action="/user-update" method="post">
          <div class="form-group">
            <label>First Name</label>
            <input type="text" class="form-control" placeholder="Leave blank to keep original first name" id="first_name" name="first_name">
          </div> <!-- end div form-group -->
          <br>
          <div class="form-group">
            <label>Last Name</label>
            <input type="text" class="form-control" placeholder="Leave blank to keep original last name" id="last_name" name="last_name">
          </div> <!-- end div form-group -->
          <br>
          <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" placeholder="Leave blank to keep original email" id="email" name="email">
          </div> <!-- end div form-group -->
          <br>
          <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" placeholder="Leave blank to keep original username" id="username" name="username">
          </div> <!-- end div form-group -->
          <br>
          <button type="submit" class="btn green">Save Changes</button>
        </form>
      </div> <!-- end div col-sm-6 col-sm-offset-3 -->
    </div> <!-- end div container -->
    {{> footer}}

  </body>
</html>
