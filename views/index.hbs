<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="https://decorator.io/tools/modulr.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.2/js/all.js"></script>
  </head>
  <body>
    <!-- Header Start -->
    <div class="row header">
      <!-- Navbar Start -->
      <div class="navbar cf height-auto padding-20 transparent -tablet-padding">
        <a href="/" class="brand text-21 text-white -padding-left -tablet-margin">Lyceum</a>
        <ul class="pull-right menu href-text-white">
          {{# if user}}
            <li><a href="/logout">Logout</a></li>
          {{else}}
            <li><a href="/login">Login</a></li>
            <li><a class="fill-purple" href="/register">Sign up</a></li>
          {{/if}}
        </ul>
      </div>
      <!-- Navbar End -->

      <!-- Row Intro Start -->
      <div class="row text-center padding-bottom-40 push-top">
        <h2 class="text-white pull-left width-100">Find the Right Resources to Learn Anything</h2>
        <!-- <p class="text-white">
          It is now easier than ever to find the right resources to learn about any topic you want
        </p> -->
      </div>
      <!-- Row Intro End -->

      <!-- Search Form Start -->
      <div class="wrapper960 center">
        <form class="form l padding-10 cf" action="/search" method="post" name="searchForm" onsubmit="return setAction()">
          <div class="col-10">
            <input class="border-white -rounded" id="query" name="query" type="text" placeholder="Search for a topic...">
          </div>
          <div class="col-2">
            <button type="submit" class="btn purple width-100">Search</button>
          </div>
          <script>
            function setAction() {
              var query = document.getElementById('query');
              if (query.value.trim()==='') {
                document.searchForm.action = "/search/"+'topics';
                return true;
              }
              document.searchForm.action = "/search/"+query.value;
              return true;
            }
          </script>
        </form>
      </div>
      <!-- Search Form End -->

    </div>
    <!-- Header End -->


    <!-- Content Start -->

    <div class="wrapper960 center padding-v-40 tablet-padding">

      <!-- Second Row Start -->
      <div class="row padding-v-40 tablet-padding-top col-gutter-20">

        <h3 class="text-center padding-bottom">Explore Topics</h3>

        <p class="padding-bottom-20 text-center text-16">
          Lorem Ipsum is simply dummy text of the printing
        </p>

        <div class="col-12">
          {{#each topics}}
            <a href="/topic/{{this._id}}">
              <h5 class="pull-left">{{this.name}}</h5>
            </a>
          {{/each}}
        </div>



        <div class="row flex padding-top-30 tablet-padding-top">
          <div class="col-12">
            <h6>Can't find what you're looking for? Make one <a href="/topic-create">here!</a></h6>
          </div>
          <div class="col-4">
            <a href="/topics" class="btn l purple width-100">Explore More</a>
          </div>
        </div>

      </div>
      <!-- Second Row End -->

    </div>
    <!-- Content End -->

    <!-- Forth Row Start -->
    <div class="row footer">

      <!-- Row Rgba Start -->
      <div class="row rgba padding-top-20">

        <!-- Wrapper Start -->
        <div class="wrapper960 center">

          <!-- About Row Start -->
          <div class="row padding-v-40 tablet-padding">

            <!-- Item Start -->
            <div class="col-3">
              <h4 class="text-purple text300 padding-bottom-10">Company</h4>
              <ul class="href-text-gray hover-href-text-underline">
                <li><a href="#">About</a></li>
                <li><a href="#">Careers</a></li>
                <li><a href="#">Press</a></li>
                <li><a href="#">Blog</a></li>
                <li><a href="#">Policies</a></li>
                <li><a href="#">Terms & Privacy</a></li>
              </ul>
            </div>
            <!-- Item End  -->

            <!-- Item Start -->
            <div class="col-3">
              <h4 class="text-purple text300 padding-bottom-10">Support</h4>
              <ul class="href-text-gray hover-href-text-underline">
                <li><a href="#">Contact Us</a></li>
              </ul>
            </div>

            <div class="col-6">
              <h4 class="text-gray text-center text300 padding-bottom-10">Follow Us</h4>
              <div class=" button-center padding-v-20">
                <a href="#" class="btn icon border purple round margin-right">
                  <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="btn icon border purple round hover-tooltip margin-right">
                  <i class="fab fa-linkedin"></i>
                </a>
                <a href="#" class="btn icon border purple round hover-tooltip margin-right">
                  <i class="fab fa-angellist"></i>
                </a>
                <a href="#" class="btn icon border purple round hover-tooltip margin-right">
                  <i class="fab fa-slack"></i>
                </a>
              </div>
            </div>
            <!-- Item End -->
          </div>
          <!-- About Row End -->

          <!-- Social Start -->
          <div class="row social button-center padding-v-20">
            <div class="col-12">
              <p class="text-gray padding-v-20">
                <i class="far fa-copyright"></i>
                2018 Lyceum
              </p>
            </div>
          </div>
          <!-- Social End -->

        </div>
        <!-- Wrapper End -->

      </div>
      <!-- Row Rgba End -->

    </div>
    <!-- Forth Row End -->
  </body>
</html>
