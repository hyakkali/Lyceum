<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    {{> header}}
  </head>
  <body>

    {{> navbar}}

    <div class="wrapper960 center body">
      <div class="col-sm-6 col-sm-offset-3">
        <h1>{{resource.name}}</h1>
        <h4>{{resource.description}}</h4>
        <h4>Created by {{resource.createdBy}} at {{resource.createdAt}}</h4>
        <h4>Likes: {{resource.likes}}</h4>
        <h4>Dislikes: {{resource.dislikes}}</h4>

        <h5>Reviews</h5>
        {{#each reviews}}
          {{#if this.message}}
            {{this.message}}
            <br>
            {{this.createdBy}}
            {{#if this.liked}}
              liked it.
            {{else}}
              disliked it.
            {{/if}}
            <br>
            {{this.createdAt}}
            <br>
            <br>
          {{/if}}
        {{else}}
          <p>No reviews yet!</p>
        {{/each}}
        <form action="/review/{{resource._id}}/{{resource.topic}}" method="post">
          <input type="radio" name="rating" value="like" checked> Like
          <input type="radio" name="rating" value="dislike"> Dislike <br>
          <input type="text" name="message" value="">
          <button type="submit" class="btn btn-warning btn-sm" name="button">Post Review</button>
        </form>
      </div>
    </div>

    {{> footer}}

  </body>
</html>
